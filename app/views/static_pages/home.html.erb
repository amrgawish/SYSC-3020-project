<% provide(:title, "Home") %>
<!DOCTYPE html>
<html>
  <body>
    <% if logged_in? %>
      <div class="row">
        <aside class="col-md-4">
          <section class="user_info">
            <%= render 'shared/user_info' %>
          </section>
          
        </aside>
        <div class="col-md-8">
          <h3>News Feed</h3>
          <%= render 'shared/feed' %>
        </div>
      </div>
    <% else %>
      <div class="center jumbotron">
        <h1> The Busy Calendar</h1>
        
        <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
      </div>
    <% end %>
  </body>
</html>

